[user]
	name = Jacek Kr√≥likowski
	email = nietaki@gmail.com
	useconfigonly = true
[core]
  excludesfile = /Users/nietaki/.gitignore_global
[alias]
  st = status
  br = branch
  co = checkout
  nuke = reset --hard HEAD
  amend = commit -a --amend
  ca = commit -a
  push-simple = push -u origin HEAD
  delete-merged-branches = ! git branch --merged master | grep -v \"\\* master\" | xargs -n 1 git branch -d
	ego = line-summary
[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path = 
[mergetool "sourcetree"]
	cmd = /Applications/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
[push]
	default = simple
